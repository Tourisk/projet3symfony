{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

<h1 class="text-center">Votre panier</h1>

{% if items %}
    {# si j'ai des produits dans mon panier, j'affiche son contenu #}
    <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>{{ item.produit.titre }}</td>
                <td>{{ item.produit.prix }} €</td>
                <td>{{ item.quantite }}</td>
                <td>{{ item.produit.prix * item.quantite }} €</td>
                <td>
                    <a href="{{ path('cart_remove', {id:item.produit.id}) }}" class="btn-sm btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><b>Total: </b></td>
                <td colspan="2" class="text-start">{{ total }} €</td>
            </tr>
        </tfoot>
    </table>
  <center>
    <a href="" class="btn btn-dark col-6">Passer la commande - En construction</a>
  </center>

{% else %}

    <p>Votre panier est vide !</p>

{% endif %}


{% endblock %}
