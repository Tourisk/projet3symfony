{% extends "base.html.twig" %}

{% block body %}

<h1 class="text-center">Liste de vos commandes</h1>

<table class="table text-center">
<thead>
    <tr>
        <th>Commande</th>
        <th>Produit</th>
        <th>Date de la commande</th>
        <th>Montant de la commande</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
{% for item in commandes %}
    <tr>
        <td>{{ item.id }}</td>
        <td>{{ item.produit.titre }}</td>
        <td>{{ item.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
        <td>{{ item.montant|number_format(2) }} €</td>
        <td>
        		<a href="{{ path('app_commande', {id: item.id}) }}" class="text-dark">
							<i class="fas fa-search fa-lg"></i>
						</a>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>

{% endblock %}